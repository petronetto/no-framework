{
    "name": "pretonetto-api-test",
    "description": "Petronetto's Recipe API",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "HelloFresh\\": "app/",
            "Petronetto\\": "core/"
        },
        "classmap": [
            "database/"
        ],
        "files": [
            "core/helpers.php"
        ]
    },
    "require": {
        "php": ">=7.1",
        "illuminate/database": "^5.6",
        "illuminate/pagination": "^5.6",
        "lcobucci/jwt": "^3.2",
        "league/fractal": "^0.17.0",
        "monolog/monolog": "^1.23",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^6.0",
        "predis/predis": "^1.1",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "respect/validation": "^1.1",
        "robmorgan/phinx": "^0.9.2",
        "zendframework/zend-diactoros": "^1.7",
        "zendframework/zend-stratigility": "^3.0"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.6.1",
        "friendsofphp/php-cs-fixer": "^2.11",
        "fzaninotto/faker": "^1.7",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/var-dumper": "^4.0",
        "zircote/swagger-php": "^2.0"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "cs-check": "phpcs",
        "cs-fix": "php-cs-fixer fix --config=.php_cs -v --dry-run --stop-on-violation --using-cache=no",
        "test": "phpunit  --coverage-text --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },

    "config": {
        "optimize-autoloader": true
    }
}
